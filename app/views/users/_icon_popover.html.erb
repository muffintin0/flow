<div class="span4">
	<b><%= link_to user.username, user, {class:'micropost_user_link',style:"font-size: 120%"}%></b><br>
	<%= link_to  ("<span class='user_followings_count'>"+pluralize(user.followings.count,'following')+"</span>").html_safe, followings_user_path(user) %><br>
	<%= link_to  ("<span class='user_followers_count'>"+pluralize(user.followers.count,'follower')+"</span>").html_safe, followers_user_path(user) %><br>
	 <%= link_to ("<span class='user_microposts_count'>"+pluralize(user.microposts.count,'micropost')+"</span>").html_safe , user_path(user) %>
</div>

<% unless current_user === user %>
<div style="clear:both; padding-top:5px;" class="connection_action">			
		<% if current_user.following?(user) %>
			<%= render 'connections/unfollow_form', user:user %>
		<% else %>
			<%= render 'connections/follow_form', user:user %>
		<% end %>
</div>
<% end %>
