<% provide(:title,'Send email confirmation') %>

<h2>Resend confirmation instructions</h2>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div>
  	<%= f.label :email, style:'display:inline;' %>&nbsp;&nbsp;&nbsp;
  	<%= f.email_field :email, placeholder:'Enter email address', style:'display:inline;' %>
  </div>

  <div><%= f.submit "Resend confirmation instructions", class:'btn btn-primary' %></div>
<% end %>

