<% provide(:title,'Forget password') %>

<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div>
  	<%= f.label :email, style:'display:inline;' %>&nbsp;&nbsp;&nbsp;
  	<%= f.email_field :email, placeholder:'Enter email address', style:'display:inline;' %>
  </div>

  <div><%= f.submit "Send me reset password instructions", class:'btn btn-primary' %></div>
<% end %>

